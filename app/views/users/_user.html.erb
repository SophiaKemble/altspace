<div class="col-md-3">
	<div class="thumbnail">
		<%= link_to user_path(user.username) do%>
		<%= gravatar_tag user.email, size:200 %>
		<div class="caption">
			<h4><%= user.username %></h4>
		</div>
		<% end %>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<h4><%= user.host_or_artist %></h4>
				<h4><%= user.location %></h4>
				<h4><%= user.bio %></h4>
			</div>
		</div>
	</div>
</div>