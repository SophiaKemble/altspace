<div class="jumbotron">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<%= gravatar_tag @user.email, size:200 %>
			</div>
			<div class="col-md-3">
				<h2><%= @user.username %></h2>
				<h4><% unless current_user == @user %>
        			<%= link_to 'send message', new_message_path(to: @user.id), class: 'btn btn-default btn-sm' %></h4>      			
        		<% end %>
				<div class="col-md-6">
					<h4><%= @user.location %></h4>
					<p><%= @user.host_or_artist %></p>
					<p><%= @user.bio %></p>
				</div>
			</div>
		</div>
	</div>
</div>
