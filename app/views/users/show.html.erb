<div class="jumbotron">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<%= gravatar_tag @user.email, size:200 %>
			</div>
			<div class="col-md-3">
				<h2><%= @user.username %></h2>
				<h4><% unless current_user == @user %>
        			<h4>Link to Send Message</h4>
      			<% end %>
			</div>
		</div>
	</div>
</div>
	
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h5><%= @user.host_or_artist %></h5>
			<h5><%= @user.location %></h5>
			<h5><%= @user.bio %></h5>
		</div>
	</div>
</div>