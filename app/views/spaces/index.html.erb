<p id="notice"><%= notice %></p>

<h1>Listing Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Wreck or reuse</th>
      <th>Fee or free</th>
      <th>Practice or perform</th>
      <th>Sq footage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.name %></td>
        <td><%= space.user_id %></td>
        <td><%= space.wreck_or_reuse %></td>
        <td><%= space.fee_or_free %></td>
        <td><%= space.practice_or_perform %></td>
        <td><%= space.sq_footage %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

